{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des anecdotes</h1>

        <a href="{{ path('post_new') }}" class="btn btn-primary mb-3">Cr√©er une nouvelle anecdote</a>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.content }}</td>
                    <td>
                        <a href="{{ path('post_show', {'id': post.id}) }}" class="btn btn-primary">Voir</a>
                        <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-warning">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune anecdote</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
