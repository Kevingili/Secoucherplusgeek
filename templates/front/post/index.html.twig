{% extends 'base.html.twig' %}

{% block title %} | Anecdotes{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des anecdotes</h1>

        <div class="row">
            <div class="col-md-9">
                {% for post in posts %}
                <div class="card mb-5">
                    <div class="card-header">Proposé par {{ post.author.email }}</div>
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text">{{ post.content|slice(0, 30) }}...</p>
                        <p class="text-right"><a href="#" class="btn btn-success"><i class="fas fa-thumbs-up"></i> 16</a> <a href="#" class="btn btn-danger"><i class="fas fa-thumbs-down"></i> 3</a>
                        </p>
                    </div>
                </div>
               {% endfor %}
            </div>
            <div class="col-md-3">
                <div class="card bg-info">
                    <h5 class="card-header">Filtre de Catégories</h5>
                    <div class="card-body">
                        <ul>
                            <li>categorie 1</li>
                            <li>categorie 2</li>
                            <li>categorie 3</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="pagination">
            {{ knp_pagination_render(posts) }}
        </div>
    </div>
{% endblock %}
